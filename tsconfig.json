{
  "compilerOptions": {
    // Basic Options
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",

    // Module Resolution (Imports Absolutos)
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@hooks/*": ["hooks/*"],
      "@services/*": ["services/*"],
      "@components/*": ["components/*"],
      "@shared/*": ["shared/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,

    // Type Checking
    "strict": false,                    // Desativado para refatoração incremental
    "noImplicitAny": false,             // Desativado temporariamente
    "strictNullChecks": true,           // Reative gradualmente
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    // Additional Checks
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
